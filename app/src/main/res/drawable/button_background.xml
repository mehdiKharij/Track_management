<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Couleur bleue lorsque le bouton est pressé -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_blue" /> <!-- Couleur bleue par défaut -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
