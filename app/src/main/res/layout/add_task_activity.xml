<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/back_total"
    tools:context=".AddTaskActivity">

    <!-- Titre de la t창che -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">

        <EditText
            android:id="@+id/task_title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text"
            android:padding="16dp"
            android:background="@null" />

    </androidx.cardview.widget.CardView>

    <!-- Description de la t창che -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        android:background="@null" >

        <EditText
            android:id="@+id/task_description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description of the task"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:maxLines="5"
            android:padding="16dp"
            android:background="@null" />
    </androidx.cardview.widget.CardView>

    <!-- Deadline de la t창che -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">

        <EditText
            android:id="@+id/task_deadline_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deadline (YYYY-MM-DD)"
            android:inputType="date"
            android:padding="16dp"
            android:background="@null" />
    </androidx.cardview.widget.CardView>

    <!-- URL de l'image -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">

        <EditText
            android:id="@+id/task_img_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL image (facultatif)"
            android:inputType="textUri"
            android:padding="16dp"
            android:background="@null" />
    </androidx.cardview.widget.CardView>

    <!-- URI du document -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">

        <EditText
            android:id="@+id/task_doc_uri_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URI du document (facultatif)"
            android:inputType="textUri"
            android:padding="16dp"
            android:background="@null" />
    </androidx.cardview.widget.CardView>

    <!-- Bouton pour ajouter la t창che -->
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:text="Add"
        android:textColor="#FFFFFF" /> <!-- Couleur de texte blanche -->
    <!-- Couleur bleu clair -->

</LinearLayout>
